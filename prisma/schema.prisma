generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model ChatRecord {
  id           String    @id @default(uuid())
  userId       String?   
  tempUserId   String?
  question     String
  answer       String    @db.Text
  status       Int
  createdAt    DateTime  @default(now())
  completedAt  DateTime?
  
  // 定义索引
  @@index([userId])
  @@index([tempUserId])
  @@index([createdAt])
  @@index([status])
  // 映射表名
  @@map("chat_records")
}